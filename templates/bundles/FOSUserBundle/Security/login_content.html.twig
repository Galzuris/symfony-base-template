{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    <h1 class="h3 mb-3 font-weight-normal">{{ 'auth_user'|trans({}, 'messages') }}</h1>

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="form-group">
        <label class="required" for="inputUsername">{{ 'username'|trans({}, 'messages') }}</label>
        <input type="text" value="{{ last_username }}" name="_username" id="inputUsername"
               class="form-control" placeholder="{{ 'set_username'|trans({}, 'messages') }}" required="required" autofocus />
    </div>

    <div class="form-group">
        <label class="required" for="inputPassword">{{ 'password'|trans({}, 'messages') }}</label>
        <input type="password" name="_password" id="inputPassword"
               class="form-control" placeholder="{{ 'set_password'|trans({}, 'messages') }}" required="required" />
    </div>

    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="checkbox">
        <label>
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'remember_me'|trans({}, 'messages') }}</label>
        </label>
    </div>

    <button class="btn btn-primary" type="submit" name="_submit">
        {{ 'login'|trans({}, 'messages') }}
    </button>
</form>
